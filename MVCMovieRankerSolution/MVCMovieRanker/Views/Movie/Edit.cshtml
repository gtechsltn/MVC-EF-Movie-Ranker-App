@model Movie

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Movie</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<input hidden asp-for="MovieId" />
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Genre"></label>
			<input asp-for="Genre" class="form-control" />
			<span asp-validation-for="Genre" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ReleaseDate"></label>
			<input asp-for="ReleaseDate" type="date" class="form-control" />
			<span asp-validation-for="ReleaseDate" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Studio"></label>
			<input asp-for="Studio" class="form-control" />
			<span asp-validation-for="Studio" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Score"></label>
			<input asp-for="Score" class="form-control" />
			<span asp-validation-for="Score" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
		<a asp-controller="Movie" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to Movie List
		</a>

	</div>
</form>

@*add a partial view to do client side validation*@
@section Scripts{
	@{
	<partial name="_ValidationScriptsPartial" />
	}
	}